%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class=>@title_header}= link_to "Movie Title", id:"title_header", movies_path(:sort => 'title')
      %th Rating
      %th{:class=>@release_date_header}= link_to "Release Date", id:"release_date_header", movies_path(:sort => 'release_date')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path

= form_tag movies_path, :method => :get, id: "ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @checked_ratings.include?("#{rating}"), id: "ratings_#{rating}"
  = submit_tag 'Refresh', id: "ratings_submit"
